{
  "config": {
    "step": {
      "user": {
        "title": "Set up chore scheduler",
        "description": "Chore Scheduler will create a todo list entity to track your chores."
      }
    },
    "abort": {
      "already_configured": "Chore scheduler is already configured."
    }
  },
  "entity": {
    "sensor": {
      "chore_count": {
        "name": "Active chores"
      },
      "next_chore": {
        "name": "Next chore"
      }
    },
    "todo": {
      "chores": {
        "name": "Chores"
      }
    }
  },
  "services": {
    "add_chore": {
      "name": "Add chore",
      "description": "Create a new chore with a schedule.",
      "fields": {
        "name": {
          "name": "Name",
          "description": "The name of the chore."
        },
        "description": {
          "name": "Description",
          "description": "Optional description of the chore."
        },
        "schedule": {
          "name": "Schedule",
          "description": "Schedule configuration (type, days, time, interval)."
        },
        "assignment": {
          "name": "Assignment",
          "description": "Assignment configuration (mode, assignees)."
        },
        "notifications": {
          "name": "Notifications",
          "description": "Notification configuration."
        },
        "enabled": {
          "name": "Enabled",
          "description": "Whether the chore is enabled."
        }
      }
    },
    "update_chore": {
      "name": "Update chore",
      "description": "Update an existing chore.",
      "fields": {
        "chore_id": {
          "name": "Chore ID",
          "description": "The ID of the chore to update."
        }
      }
    },
    "delete_chore": {
      "name": "Delete chore",
      "description": "Delete a chore.",
      "fields": {
        "chore_id": {
          "name": "Chore ID",
          "description": "The ID of the chore to delete."
        }
      }
    },
    "trigger_chore": {
      "name": "Trigger chore",
      "description": "Manually trigger a chore (create todo item now).",
      "fields": {
        "chore_id": {
          "name": "Chore ID",
          "description": "The ID of the chore to trigger."
        }
      }
    },
    "list_chores": {
      "name": "List chores",
      "description": "Get a list of all configured chores."
    }
  }
}
